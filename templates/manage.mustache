{{!
    @template local_nolej/manage

    Context variables required for this template:
    * modules
        * (array)
            * documentid
            * title
            * created
            * status
            * lastupdate
            * editurl
            * activitiesurl
    * lang
        * title
        * created
        * status
        * lastupdate
        * action
        * createmodule
        * editmodule
        * deletemodule
        * activities

    Example context (json):
    {
        'modules': [
            {
                'documentid': 'abcd-efgh',
                'title': 'My Nolej Module',
                'created': '2024-01-01 10:00',
                'status': 'Analysis ready',
                'lastupdate': '2024-01-01 12:00',
                'editurl': 'https://mymoodlesite.com/local/nolej/edit.php?documentid=abcd-efgh',
                'activitiesurl': null,
            }
        ]
        'lang': {
            'title': get_string('title', 'local_nolej'),
            'created': get_string('created', 'local_nolej'),
            'status': get_string('status', 'local_nolej'),
            'lastupdate': get_string('lastupdate', 'local_nolej'),
            'action': get_string('action', 'local_nolej'),
            'createmodule': get_string('createmodule', 'local_nolej'),
            'editmodule': get_string('editmodule', 'local_nolej'),
            'deletemodule': get_string('deletemodule', 'local_nolej'),
            'activities': get_string('activities', 'local_nolej')
        }
    }
}}


<div class="text-right mb-3 mt-2">
    <input type="button" class="btn btn-primary" value="{{lang.createmodule}}" onclick="location.href='{{{createurl}}}'" />
</div>

<div class="table-responsive-xl">
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">{{lang.title}}</th>
            <th scope="col">{{lang.created}}</th>
            <th scope="col">{{lang.status}}</th>
            <th scope="col">{{lang.lastupdate}}</th>
            <th scope="col">{{lang.action}}</th>
        </tr>
    </thead>
    <tbody>
        {{#modules}}
            <tr>
                <td>{{title}}</td>
                <td>{{created}}</td>
                <td>{{status}}</td>
                <td>{{lastupdate}}</td>
                <td>
                    {{#activitiesurl}}
                    <input type="button" class="btn btn-primary mr-2 mb-2 local_nolej_activities" value="{{lang.activities}}" onclick="location.href='{{{activitiesurl}}}'" />
                    {{/activitiesurl}}
                    {{#editurl}}
                    <input type="button" class="btn btn-secondary mr-2 mb-2 local_nolej_edit" value="{{lang.editmodule}}" onclick="location.href='{{{editurl}}}'" />
                    {{/editurl}}
                    <input type="button" class="btn btn-danger mr-2 mb-2 local_nolej_delete" data-documentid="{{documentid}}" value="{{lang.deletemodule}}" />
                </td>
            </tr>
        {{/modules}}
    </tbody>
    </table>
</div>

