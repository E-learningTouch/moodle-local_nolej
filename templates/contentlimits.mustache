{{!
    @template local_nolej/contentlimits

    Context variables required for this template:
    * audioformats
    * videoformats
    * docformats

    Example context (json):
    {
        'audioformats': 'mp3, wav, opus, ogg, oga, m4a',
        'videoformats': 'm4v, mp4, ogv, avi, webm',
        'docformats': 'pdf, doc, docx, odt'
    }
}}

<div class="limit-container">
    <details class="limit-details">
        <summary>{{#str}} limitaudio, local_nolej {{/str}}</summary>
        <div class="limit-content">
            <ul>
                <li>{{#str}} limitmaxduration, local_nolej, "60" {{/str}}</li>
                <li>{{#str}} limitmincharacters, local_nolej, "500" {{/str}}</li>
                <li>{{#str}} limitmaxsize, local_nolej, "1" {{/str}}</li>
                <li>{{#str}} limitmaxcharacters, local_nolej, "50 000" {{/str}}</li>
                <li>{{#str}} limittype, local_nolej, "{{audioformats}}" {{/str}}</li>
            </ul>
        </div>
    </details>
</div>

